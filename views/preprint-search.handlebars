{{#each message}}
<div class="row" style="padding-bottom:1.5rem"><small>{{{text}}}</small></div>
{{/each}}

{{#if irrelevant_card2}}
<div class="row" style="padding-bottom:1.5rem"><small>We found results with low relevancy only:</small></div>
{{/if}}

{{#each publication}}
<div class="row {{#if inlineStyle}}lowRelevancy{{/if}}" {{{inlineStyle}}}><div class="col-md-12 equel-grid"><div class="grid"><a href="{{{link}}}"><div class="grid-body"><div class="vertical-timeline-wrapper"><div class="timeline-vertical dashboard-timeline"><div class="activity-log"><p class="log-name">{{{title}}}</p><div class="log-details">{{abstract}}</div><small class="log-time">{{{date}}}<br/><!--{{relevancy}}<br/>-->{{server}}</small></div></div></div></div></a></div></div></div>
{{/each}}

{{#if irrelevant_card1}}
<script>
    function showLowRelevancy() { 
        let items = document.getElementsByClassName('lowRelevancy');
        for (let i=0; i < items.length; i++) {
            items[i].style.display = "block";
        }
        document.getElementById("lowRelevancyCard").style.display = "none";
    }
</script>
<div class="row" id="lowRelevancyCard"><div class="col-md-12 equel-grid"><div class="grid"><a href="javascript:showLowRelevancy()"><div class="grid-body"><div style="font-size: 13px; color: #adb5bd; padding:1rem">
    Results with low relevancy were hidden. If you want to explore them, click here.
</div></div></a></div></div></div>
{{/if}}

{{#if pagination}}
<div class="dataTables_paginate paging_simple_numbers" id="sample-data-table_paginate"><ul class="pagination"><li class="paginate_button page-item previous {{pagination_prev_activity}}" id="sample-data-table_previous"><a href="{{{pagination_prev_link}}}" class="page-link">Previous</a></li>
{{#each pagination}}
<li class="paginate_button page-item {{activity}}"><a href="{{{link}}}" class="page-link">{{number}}</a></li>
{{/each}}
<li class="paginate_button page-item next {{pagination_next_activity}}" id="sample-data-table_next"><a href="{{{pagination_next_link}}}" class="page-link">Next</a></li></ul></div>
{{/if}}